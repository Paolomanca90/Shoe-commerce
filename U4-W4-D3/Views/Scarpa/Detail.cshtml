@using U4_W4_D3.Models

@{
    ViewBag.Title = "Detail";
    Scarpa scarpa = ViewData["Scarpa"] as Scarpa;
    <link href="~/Content/carousel.css" rel="stylesheet" />
}

<div class="p-5 bg-light border border-3 border-info">
    <section class="photo-gallery mb-5">
        <div class="container">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 gallery-grid">
                <div class="col">
                    <div class="gallery-item" data-bs-toggle="modal" data-bs-target="#lightbox-modal">
                        <img src="~/Content/Img/@scarpa.Image" class="img-fluid" alt="image">
                    </div>
                </div>
                <div class="col">
                    <div class="gallery-item" data-bs-toggle="modal" data-bs-target="#lightbox-modal">
                        <img src="~/Content/Img/@scarpa.Image1" class="img-fluid" alt="image">
                    </div>
                </div>
                <div class="col">
                    <div class="gallery-item" data-bs-toggle="modal" data-bs-target="#lightbox-modal">
                        <img src="~/Content/Img/@scarpa.Image2" class="img-fluid" alt="image">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="modal fade lightbox-modal" id="lightbox-modal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-fullscreen">
            <div class="modal-content">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="modal-body  mx-auto">
                    <div id="carouselExample" class="carousel slide mb-4">
                        <div class="carousel-inner mx-auto w-50">
                            <div class="carousel-item active">
                                <img src="~/Content/Img/@scarpa.Image" class="d-block w-75 mx-auto" alt="scarpa">
                            </div>
                            <div class="carousel-item">
                                <img src="~/Content/Img/@scarpa.Image1" class="d-block w-75 mx-auto" alt="scarpa">
                            </div>
                            <div class="carousel-item">
                                <img src="~/Content/Img/@scarpa.Image2" class="d-block w-75 mx-auto" alt="scarpa">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex w-100">
        <div class="p-4 border border-2 border-info w-75 ">
            <h3 class="fw-bold">@scarpa.Nome</h3>
            <p>@scarpa.Descrizione</p>
        </div>
        <div class="p-4 w-25 d-flex align-items-center justify-content-center flex-column">
            <h3 class="fw-bold">Prezzo</h3>
            <h2>@scarpa.Prezzo.ToString("C")</h2>
        </div>
    </div>
</div>


